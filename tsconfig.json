{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@granat/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "dev"],
  "exclude": ["node_modules", "dist"]
}

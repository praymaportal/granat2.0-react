{
  "name": "@mts-ds/base",
  "version": "2.2.0",
  "description": "MTS Design-System Base components",
  "homepage": "https://gitlab.services.mts.ru/digital-products/design-system/components/base",
  "bugs": "https://gitlab.services.mts.ru/digital-products/design-system/components/base/-/issues",
  "license": "GPL-3.0",
  "type": "module",
  "files": [
    "assets/**/*",
    "build/styles/**/*",
    "build/web/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.services.mts.ru/digital-products/design-system/components/base.git"
  },
  "scripts": {
    "build": "yarn run clean && yarn build:tokens && yarn build:styles && yarn build:styles-fonts-v1 && yarn build:styles-fonts-v2 && yarn build:styles-fonts-v3 && yarn build:styles-typography-v1 && yarn build:styles-typography-v2 && yarn build:styles-typography-v3",
    "build:tokens": "yarn node ./src/tokens/build.cjs",
    "build:styles": "sass -I node_modules ./src/styles/main.scss | postcss --output-style=expanded -o build/styles/main.css",
    "build:styles-fonts-v1": "sass -I node_modules ./src/styles/fonts-v1.scss | postcss --output-style=expanded -o build/styles/fonts-v1.css",
    "build:styles-fonts-v2": "sass -I node_modules ./src/styles/fonts-v2.scss | postcss --output-style=expanded -o build/styles/fonts-v2.css",
    "build:styles-fonts-v3": "sass -I node_modules ./src/styles/fonts-v3.scss | postcss --output-style=expanded -o build/styles/fonts-v3.css",
    "build:styles-typography-v1": "sass -I node_modules ./src/styles/typography-v1.scss | postcss --output-style=expanded -o build/styles/typography-v1.css",
    "build:styles-typography-v2": "sass -I node_modules ./src/styles/typography-v2.scss | postcss --output-style=expanded -o build/styles/typography-v2.css",
    "build:styles-typography-v3": "sass -I node_modules ./src/styles/typography-v3.scss | postcss --output-style=expanded -o build/styles/typography-v3.css",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "clean": "rimraf ./dist"
  },
  "devDependencies": {
    "ejs": "^3.1.6",
    "lodash": "^4.17.21",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-preset-env": "^8.3.2",
    "rimraf": "^3.0.2",
    "sass": "^1.62.1",
    "style-dictionary": "^2.10.3",
    "tinycolor2": "^1.4.1"
  }
}